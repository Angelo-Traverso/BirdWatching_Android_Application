<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/tvBirdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBirdName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text=""
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/location_small"
        app:drawableTint="@color/white" />

    <TextView
        android:id="@+id/tvDateSpotted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:drawablePadding="8dp"

        android:text=""
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/calender_small"
        app:drawableTint="@color/white" />

    <TextView
        android:id="@+id/tvViewObsNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDateSpotted"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"

        android:gravity="start"
        android:text=""
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/edit_square"
        app:drawableTint="@color/white" />

</RelativeLayout>